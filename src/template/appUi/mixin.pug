
section
  template(x-for="section in getComponents")
    div
      h3(class="text-xl font-bold text-slate-900" x-text="section.header")
      p(class="mt-3 text-sm leading-7 text-slate-500" x-text="section.desc")
      div(class='mt-10 divide-y divide-gray-100 border-t border-slate-100 lg:mt-12'
        
      )
        template(x-for='cat in section.data')
          section.grid.scroll-mt-12.grid-cols-1.gap-x-8.gap-y-10.py-10(:id="cat.idEl" class='lg:py-12 xl:grid-cols-4' )
            h3.text-base.font-semibold.text-slate-900(x-text= "cat.title")
            ul.col-span-3.grid.grid-cols-1.gap-y-6.gap-x-6(class='sm:grid-cols-2 sm:gap-y-10 md:grid-cols-3 xl:gap-x-8')
              template(x-for= "el in cat.data")
                include ../mixins/cardHome
