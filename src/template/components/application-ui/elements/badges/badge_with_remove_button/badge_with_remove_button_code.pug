pre
  code.lang-pug.
    - var lg ="py-0.5 pr-0.5 pl-2 text-xs"
    - var sm = "py-0.5 pl-2.5 pr-1 text-sm"

    mixin badge_with_remove_btn(size, txt, color="indigo")

      if size === "sm"
        - var cls = `${sm}  bg-${color}-100 text-${color}-700`
        span.inline-flex.items-center.rounded-full.font-medium(class=cls)= txt
          button.inline-flex.h-4.w-4.flex-shrink-0.items-center.justify-center.rounded-full(type='button' class=`ml-0.5 text-${color}-400 hover:bg-${color}-200 hover:text-${color}-500 focus:bg-${color}-500 focus:text-white focus:outline-none`)
            span.sr-only Remove large option
            svg.h-2.w-2(stroke='currentColor' fill='none' viewBox='0 0 8 8')
              path(stroke-linecap='round' stroke-width='1.5' d='M1 1l6 6m0-6L1 7')


      else if size === 'lg'
        - var cls = `${lg}  bg-${color}-100 text-${color}-700`
        
        span.inline-flex.items-center.rounded-full.font-medium(class=cls)= txt
          button.inline-flex.h-4.w-4.flex-shrink-0.items-center.justify-center.rounded-full(type='button' class=`ml-0.5 text-${color}-400 hover:bg-${color}-200 hover:text-${color}-500 focus:bg-${color}-500 focus:text-white focus:outline-none`)
            span.sr-only Remove large option
            svg.h-2.w-2(stroke='currentColor' fill='none' viewBox='0 0 8 8')
              path(stroke-linecap='round' stroke-width='1.5' d='M1 1l6 6m0-6L1 7')

